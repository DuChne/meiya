.order_box {
    background-color: #fff;
}

.order_title {
    height: 90rpx;
    padding: 0 30rpx;
    background-color: #fff;
}

.coupons {
    color: #666;
    font-size: 28rpx;
    line-height: 28rpx;
    text-align: right;
    padding: 20rpx;
}

.order_guige {
    height: 80rpx;
    color: #666;
    background-color: #fff;
    padding: 0 20rpx;
}

.price {
    color: #f86738;
}

.buyer_box {
    margin: 30rpx 0 0;
    background-color: #fff;
}

.connect_box {
    margin: 0 30rpx;
    padding: 10rpx 0 20rpx;
    color: #999;
}

.notice_box {
    background-color: #fff;
    margin: 0 0 30rpx 0;
}

.notice_contents {
    font-size: 26rpx;
    color: #999;
    margin: 0 30rpx;
    padding: 30rpx 0;
}

.payFooter {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: #fff;
}

.payNow-btn {
    width: 40%;
    height: 100%;
    color: #fff;
    text-align: center;
    line-height: 100rpx;
    background-color: #f55;
}

.money-box {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.arrow {
    width: 12rpx;
    height: 25rpx;
    margin: 0 0 0 20rpx;
}

.btnRow {
    padding: 0 20rpx;
    height: 90rpx;
    display: flex;
    justify-content: flex-end;
    background-color: #fff;
}

.btn {
    width: 180rpx;
    height: 50rpx;
    border-radius: 5rpx;
    text-align: center;
    line-height: 50rpx;
    box-sizing: border-box;
}

.cancle {
    border: 1rpx solid #333;
    color: #333;
}

.pay {
    border: 1rpx solid #f86738;
    color: #f86738;
    margin: 0 0 0 20rpx;
}

.buyMesBox {
    padding: 20rpx;
    min-height: 180rpx;
    background-color: #f2f2f2;
}

.goodsImg {
    width: 180rpx;
    height: 180rpx;
    margin: 0 30rpx 0 0;
}

.goodsName {
    line-height: 30rpx;
}

.guige {
    color: #666;
    font-size: 26rpx;
    line-height: 26rpx;
    margin: 20rpx 0 0 0;
}

.singleP {
    color: #000;
    font-size: 28rpx;
    margin: 0 0 0 20rpx;
}

.num {
    color: #666;
    font-size: 28rpx;
    line-height: 28rpx;
    text-align: right;
    margin: 30rpx 0 20rpx;
}

.totalP {
    font-size: 28rpx;
    line-height: 28rpx;
    color: #333;
    text-align: right;
}