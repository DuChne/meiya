.orderList {
    margin: 20rpx 0 0;
}

.item {
    margin: 0 0 20rpx;
    background-color: #fff;
}

.title {
    height: 94rpx;
    padding: 0 20rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.shopIcon {
    width: 40rpx;
    height: 40rpx;
    margin: 0 20rpx 0 0;
}

.shopName {
    font-size: 28rpx;
}

.arrow {
    width: 10rpx;
    height: 20rpx;
    margin: 0 0 0 20rpx;
}

.delete {
    width: 30rpx;
    height: 30rpx;
}

.buyMesBox {
    padding: 20rpx;
    min-height: 180rpx;
    background-color: #f2f2f2;
}

.radioBox {
    line-height: 100%;
}

.goodsImg {
    width: 180rpx;
    height: 180rpx;
    margin: 0 30rpx 0 0;
}

.goodsName {
    line-height: 30rpx;
}

.guige {
    color: #666;
    font-size: 26rpx;
    line-height: 26rpx;
    margin: 20rpx 0 0 0;
}

.singleP {
    color: #000;
    font-size: 28rpx;
}

.num {
    color: #666;
    font-size: 28rpx;
    line-height: 28rpx;
    text-align: right;
    margin: 30rpx 0 20rpx;
}

.totalP {
    font-size: 28rpx;
    line-height: 28rpx;
    color: #333;
    text-align: right;
}

.btnRow {
    padding: 0 20rpx;
    height: 90rpx;
    display: flex;
    justify-content: flex-end;
}

.num-box {
    display: flex;
}

.num-box .num-jian,.num-box .num-input,.num-box .num-jia {
    width: 66rpx;
    height: 46rpx;
    line-height: 46rpx;
    text-align: center;
    border: 1px solid #eee;
    font-size: 40rpx;
    margin: 3rpx;
}

.num-box .num-jian,.num-box .num-jia {
    background-color: #fff;
}

.num-box .num-jian.disabled,.num-box .num-jia.disabled {
    background-color: #f5f5f9;
}

.num-box .num-input {
    font-size: 28rpx;
}

.num-box .num-input input {
    height: 100%;
}

.footerBox {
    width: 100%;
    height: 100rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    z-index: 5;
}

.leftAll {
    font-size: 28rpx;
    margin: 0 30rpx;
}

.rightAll {
    margin: 0 20rpx 0 0;
}

.totalText {
    color: #333;
}

.priceTot {
    font-size: 28rpx;
    color: #000;
    margin: 0 30rpx 0 0;
}

.settleBtn {
    width: 150rpx;
    height: 60rpx;
    background-color: #333;
    border-radius: 30rpx;
    color: #fff;
    line-height: 60rpx;
    text-align: center;
}