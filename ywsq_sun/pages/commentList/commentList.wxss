page {
    background-color: #fff;
}

.noComment {
    display: block;
    width: 140rpx;
    height: 180rpx;
    margin: 30rpx auto 56rpx;
}

.noText {
    font-size: 24rpx;
    line-height: 24rpx;
    color: #999;
    text-align: center;
}

.commItem {
    padding: 30rpx 20rpx;
}

.header {
    width: 70rpx;
    height: 70rpx;
    border-radius: 100%;
    display: flex;
}

.nick {
    font-size: 28rpx;
    margin: 0 20rpx;
}

.commTime {
    font-size: 26rpx;
    color: #999;
}

.contents {
    font-size: 26rpx;
    color: #666;
    margin: 10rpx 0 0 90rpx;
}

.commBox {
    height: 130rpx;
    width: 100%;
}

.comm {
    width: 100%;
    height: 130rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
}

.inputBox {
    margin: 20rpx;
    height: 70rpx;
    background-color: #f2f2f2;
}

.input {
    width: 100%;
    height: 100%;
    padding: 0 20rpx;
    font-size: 28rpx;
}

.diyHolder {
    font-size: 26rpx;
    color: #999;
}